@using Web.Models

@model Domain.Entities.User
@{
    ViewBag.Title = "Додати нового користувача";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Вихід", "Logout", "Account")<br/>
@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.CreatedDate)
@using (Html.BeginForm())
{
    <div>
        <legend>Додати користувача</legend>
        <p>
            @Html.ValidationSummary(true)
        </p>
        <div class="editor-field">
            Логін: @Html.TextBoxFor(x => x.UserName)
            @Html.ValidationMessageFor(x => x.UserName)
        </div>

        <div class="editor-field">
            Пароль: @Html.EditorFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)

        </div>
       
        <div class="editor-field">
            Email: @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="editor-field">
            Прізвище:@Html.TextBoxFor(x => x.LastName)
            @Html.ValidationMessageFor(x => x.LastName)
        </div>

        <div class="editor-field">
            Ім'я: @Html.TextBoxFor(x => x.FirstName)
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <div class="editor-field">
            По батькові: @Html.TextBoxFor(x => x.MiddleName) @Html.ValidationMessageFor(x => x.MiddleName)
        </div>

        <p>
            <input type="submit" value="Додати" />
        </p>
    </div>
}
